#!/usr/bin/env bash

APP="todonime" # name of your release

BUILD_HOST="todonime.beta.grutenko.ru" # host where to build the release
BUILD_USER="ubuntu" # local user at build host
BUILD_AT="/tmp/erlang/todonime/builds" # build directory on build host

STAGING_HOSTS="todonime.beta.grutenko.ru" # deploy / production hosts separated by space
STAGING_USER="ubuntu" # local user at deploy hosts
DELIVER_TO="/opt/todonime" # deploy directory on production hosts